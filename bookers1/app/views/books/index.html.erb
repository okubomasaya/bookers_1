

<body>

 <h1>Books</h1>

 <table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td>
					<ul>
						<li><%= link_to "Show", book_path(book.id) %></li>
						<li><%= link_to "Edit", edit_book_path(book.id)%></li>
						<li><%= link_to "Destroy", "/books/#{book.id}", method: :delete ,"data-confirm" => "Are you sure?" %></li>
					</ul>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>




 <h2>New book</h2>

 <% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
  <div class = "alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <%= form_with model: @book, url:'/books', local:true do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>
 <br><%= f.submit 'Create Book' %></br>
 <% end %>

</body>